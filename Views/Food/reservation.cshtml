<!-- Icons -->
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

      <!-- CSS -->
      <link rel="stylesheet" href="~/css/book.css">
      <link rel="stylesheet" href="~/css/styles.css">

      <!-- Fonts -->
      <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
      
      <!-- Tailwind CDN -->
      <link href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
      
      <!-- Favicon -->
      <link rel="icon" type="image/png" sizes="32x32" href="~/img/favicon.ico">
      <link rel="icon" type="image/png" sizes="16x16" href="~/img/favicon.ico">

      <!-- Title -->
      <title>Glory Hotels | Book a Table</title>

        <div class="container">
          <div class="col-12">
              <div class="alrt">
                    
                    @if (ViewBag.allReq != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                              <strong>@ViewBag.allReq</strong>
                              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                              </button>
                        </div>
                    }
                    @if (ViewBag.passNotMatchError != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                              <strong>@ViewBag.passNotMatchError</strong>
                              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                              </button>
                        </div>
                    }
                </div>
           </div>
       </div>


      <div class="booking-form-w3layouts" style="font-family: Inter;">
         <form action="/Food/reservation" method="post">
            <h2 class="sub-heading-agileits">Table Reservation</h2>
            
            <div class="main-flex-w3ls-sectns">
               <div class="field-agileinfo-spc form-w3-agile-text1">
               </div>
               <div class="field-agileinfo-spc form-w3-agile-text2">
                  <select class="form-control" name="package">
                     <option>Preferred Package</option>
                     <option>Buffet</option>
                     <option>Hi-Tea cum Lunch</option>
                     <option>Special (Request note below)</option>
                  </select>
               </div>
            </div>
            <div class="main-flex-w3ls-sectns">
               <div class="field-agileinfo-spc form-w3-agile-text2">
                   <p>Date</p>
                  <input type="date" id="checkin" name="Date" class="timepicker form-control hasWickedpicker" >
               </div>
               <div class="field-agileinfo-spc form-w3-agile-text2">
                   <p>Time</p>
                  <input type="time" id="time" name="Time" class="timepicker form-control hasWickedpicker" >
               </div>
            </div>
            <div class="triple-wthree">
               <div class="field-agileinfo-spc form-w3-agile-text11">
                    <input type="number" class="form-control" name="adults" id="adults" placeholder="Adults" min="1" required/>
               </div>
               <div class="field-agileinfo-spc form-w3-agile-text22">
                    <input type="number" class="form-control" name="children" id="children" placeholder="Children" min="0" />
               </div>
               <div class="field-agileinfo-spc form-w3-agile-text33">
                    <input type="number" class="form-control" name="infants" id="infants" placeholder="Infants" min="0" />
               </div>
            </div>
            <div class="main-flex-w3ls-sectns">
               <div class="field-agileinfo-spc form-w3-agile-text1">
                  <input id="datepicker1" name="Text" type="text"  onfocus="this.value = '';">
               </div>
               <div class="field-agileinfo-spc form-w3-agile-text2">
                  <input type="text" id="timepicker1" name="Time" class="timepicker form-control hasWickedpicker" onkeypress="return false;">
               </div>
            </div>
            <div class="field-agileinfo-spc form-w3-agile-text">
               <textarea name="Message" placeholder="Any Message..."></textarea>
            </div>
            <h3 class="sub-heading-agileits">Personal Details</h3>
            <div class="main-flex-w3ls-sectns">
               <div class="field-agileinfo-spc form-w3-agile-text1">
                  <input type="text" name="Name" placeholder="Full Name" required="">
               </div>
               <div class="field-agileinfo-spc form-w3-agile-text2">
                  <input type="text" name="PhoneNo" placeholder="Phone Number" required="">
               </div>
            </div>
           
        @if (ViewBag.book != null)
        {
         <div class="invalid" style="color : red; padding:5px 30px;" >

                @ViewBag.book
                                    </div>
        }
        @if (ViewBag.inv != null)
        {
                  <div class="invalid" style="color : red; padding:5px 30px;" >

                @ViewBag.inv
                                </div>
        }
        @if (ViewBag.r != null)
        {
              <div class="invalid" style="color : red; padding:5px 30px;" >

                @ViewBag.r
                            </div>
        }
        @if (ViewBag.s != null)
        {
            <div class="invalid-field" style="color : red; padding:5px 30px; ">

                @ViewBag.s
                 </div>
        }
        
         <div class="clear"></div>
             <button type="Submit" class="button button__header focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" style="width: 20%; margin: auto; text-align: center; font-size: 17px; margin-top: 40px;">Submit</button>
            
            <div class="clear"></div>
         </form>
      </div>
            <script src="~/js/formDateLogic.js"></script>
